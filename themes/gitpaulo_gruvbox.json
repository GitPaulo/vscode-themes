  // ============================================================================
  // Syntax Token Colors
  // Code highlighting rules for all programming languages
  // Based on Gruvbox Material color palette
  // ============================================================================
  "tokenColors": [
    // Italic for *emphasis* markdown or other markup
    {
      "scope": "emphasis",
      "settings": {
        "fontStyle": "italic"
      }
    },
    // Bold for **strong** markdown or similar constructs
    {
      "scope": "strong",
      "settings": {
        "fontStyle": "bold"
      }
    },
    // Line/block comments in all languages
    {
      "scope": "comment",
      "settings": {
        "foreground": "#7c6f64"
      }
    },
    // String literals: quoted text, template strings, etc.
    {
      "scope": "string",
      "settings": {
        "foreground": "#a9b665"
      }
    },
    // Numbers, null, primitive types, built-in properties
    // Covers: numeric constants, `null`, DOM properties, etc.
    {
      "scope": [
        // ── Numeric literals ──
        "constant.numeric", // All languages: 42, 3.14, 0xFF
        // ── Null / nil / undefined equivalents ──
        "constant.language.null", // JS/TS/Python/C#
        "constant.language.undefined", // JS/TS explicit undefined
        "constant.language.nil", // Lua
        "constant.language.none", // Python None
        "constant.language.null.go", // Go nil (some grammars use this)
        "variable.language.null", // alt naming in some grammars
        "variable.language.nil", // alt naming
        // ── Boolean literals ──
        "constant.language.boolean", // true / false (generic)
        "constant.language.true", // some grammars split these
        "constant.language.false",
        // ── Misc template constants ──
        "meta.property-name",
        "meta.property-value",
        "support.constant.handlebars" // Handlebars templates
      ],
      "settings": {
        "foreground": "#7daea3"
      }
    },
    // built-in functions
    {
      "scope": [
        "support.function",
        "support.constant.builtin"
      ],
      "settings": {
        "foreground": "#e78a4e"
      }
    },
    // this and super
    {
      "scope": [
        "variable.language.this",
        "variable.language.super"
      ],
      "settings": {
        "foreground": "#d3869b",
        "fontStyle": "bold"
      }
    },
    // Keywords and storage modifiers/types: if, return, class, const, public…
    {
      "scope": [
        "keyword",
        "storage.modifier",
        "storage.type",
        // ── Primitive type keywords (int, string, bool, etc.) ──
        "support.type.primitive", // shared by JS/TS/C#/Go
        "storage.type.boolean.go", // Go bool
        "storage.type.string.go", // Go string
        "storage.type.numeric.go", // Go int/float family
        "storage.type.cs", // C# built-in primitives (int, double)
        "keyword.type.null.ts", // TS null/undefined"
      ],
      "settings": {
        "foreground": "#d8a657"
      }
    },
    // Classes, object types, and attribute/property names
    {
      "scope": [
        // class / type names
        "entity.name.type",
        "entity.other.inherited-class",
        "support.class",
        // object / attribute / property names
        "meta.property.object",
        "meta.property-name",
        "variable.other.property",
        "support.variable.property"
      ],
      "settings": {
        "foreground": "#d4be98"
      }
    },
    // HTML/XML tag names or other markup tags
    {
      "scope": [
        "entity.name.tag"
      ],
      "settings": {
        "foreground": "#EAE2B9"
      }
    },
    // Diagnostic/info tokens (used by some extensions/linters)
    {
      "scope": "token.info-token",
      "settings": {
        "foreground": "#478aff"
      }
    },
    // Warnings (lint or compiler warnings)
    {
      "scope": "token.warn-token",
      "settings": {
        "foreground": "#CD9731"
      }
    },
    // Errors (lint or compiler errors)
    {
      "scope": "token.error-token",
      "settings": {
        "foreground": "#F44747"
      }
    },
    // Debug-related tokens (breakpoints, logpoints)
    {
      "scope": "token.debug-token",
      "settings": {
        "foreground": "#a866d8"
      }
    },
    // Highlight interpolation & expressions
    {
      "scope": [
        "punctuation.definition.interpolation.begin",
        "punctuation.definition.interpolation.end",
        "punctuation.other.placeholder", // for %s, %d etc. if grammar uses this
        "string.interpolated", // sometimes the whole interpolated part
        "meta.interpolation", // or `meta.embedded` depending on grammar
        "constant.other.placeholder.format", // some grammars have this for % formats
        "punctuation.section.embedded", // for embedded `${}` in template literals
        // JS / TS
        "punctuation.section.embedded.begin",
        "punctuation.section.embedded.end",
        // C#
        "punctuation.definition.interpolation.begin.csharp",
        "punctuation.definition.interpolation.end.csharp",
        // Python f-strings
        "punctuation.definition.interpolation.begin.python",
        "punctuation.definition.interpolation.end.python",
        // Generic interpolated string scopes
        "string.interpolated",
        "meta.interpolation"
      ],
      "settings": {
        "foreground": "#EAE2B9",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "punctuation.definition.template-expression"
      ],
      "settings": {
        "foreground": "#EAE2B9",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "unnecessary",
      "settings": {
        "foreground": "#ff6464",
        "fontStyle": "underline"
      }
    }
  ]
}
